<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/galleryBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/blackTextTrans"
        android:text="A v e r a g e"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="340dp"
        android:textColor="@color/blackTextTrans"
        android:text="O t h e r"
        />

    <Button
        android:id="@+id/average"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="550dp"
        android:text=""
        />

    <Button
        android:id="@+id/other"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="225dp"
        android:layout_height="20dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="550dp"
        android:text=""
        />

    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:onClick="loadImagefromGallery"
        android:background="@color/galleryBackground"
        android:text="L o a d" >
    </Button>
    <Button
        android:id="@+id/captureButton"
        android:layout_width="220dp"
        android:layout_marginLeft="218dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:onClick="loadImagefromGallery"
        android:background="@color/galleryBackground"
        android:text="C a p t u r e" >
    </Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView"
            android:layout_marginBottom="70dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/touchView"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_width="400dp"
            android:layout_height="430dp"
            />

        <ImageButton
            android:id="@+id/menuButton2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/watercolorlogo"
            />

    </RelativeLayout>

</RelativeLayout>
